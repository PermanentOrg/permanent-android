<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/two_step_verification_navigation"
    app:startDestination="@id/enablingVerificationFragment">

    <fragment
        android:id="@+id/enablingVerificationFragment"
        android:name="org.permanent.permanent.ui.twoStepVerification.EnablingVerificationFragment"
        android:label="EnablingVerificationFragment"
        tools:layout="@layout/fragment_verification_enabling">
        <action
            android:id="@+id/action_enablingVerificationFragment_to_codeVerificationFragment"
            app:destination="@id/codeVerificationFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_enablingVerificationFragment_to_mainActivity"
            app:destination="@id/mainActivity"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit" />
    </fragment>
    <fragment
        android:id="@+id/codeVerificationFragment"
        android:name="org.permanent.permanent.ui.CodeVerificationFragment"
        android:label="CodeVerificationFragment"
        tools:layout="@layout/fragment_verification_code">
        <action
            android:id="@+id/action_codeVerificationFragment_to_enablingVerificationFragment"
            app:destination="@id/enablingVerificationFragment" />
        <action
            android:id="@+id/action_codeVerificationFragment_to_mainActivity"
            app:destination="@id/mainActivity"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="org.permanent.permanent.ui.mainScreen.MainActivity"
        android:label="MainActivity"
        tools:layout="@layout/activity_main"/>
</navigation>