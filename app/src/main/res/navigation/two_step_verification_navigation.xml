<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/two_step_verification_navigation"
    app:startDestination="@id/twoStepVerificationFragment">

    <fragment
        android:id="@+id/twoStepVerificationFragment"
        android:name="org.permanent.permanent.ui.twoStepVerification.TwoStepVerificationPhoneFragment"
        android:label="TwoStepVerificationFragment"
        tools:layout="@layout/fragment_two_step_verification">
        <action
            android:id="@+id/action_twoStepVerificationFragment_to_twoStepVerificationCodeFragment"
            app:destination="@id/twoStepVerificationCodeFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/twoStepVerificationCodeFragment"
        android:name="org.permanent.permanent.ui.twoStepVerification.TwoStepVerificationCodeFragment"
        android:label="TwoStepVerificationCodeFragment"
        tools:layout="@layout/fragment_two_step_verification_code">
        <action
            android:id="@+id/action_twoStepVerificationCodeFragment_to_twoStepVerificationFragment"
            app:destination="@id/twoStepVerificationFragment" />
    </fragment>
</navigation>