<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextAppearance">@style/customMenuTextAppearance</item>
        <item name="textInputStyle">@style/customTextField</item>
        <item name="listPreferredItemHeightSmall">54dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Theme without ActionBar -->
    <style name="NoActionBarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextAppearance">@style/customMenuTextAppearance</item>
        <item name="textInputStyle">@style/customTextField</item>
        <item name="listPreferredItemHeightSmall">54dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="customMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="customTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/lightGrey</item>
    </style>

    <style name="customDrawerStyle">
        <item name="android:listDivider">@color/white</item>
    </style>

    <style name="customDrawerTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="customButtonBottomSheetStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="customTextButtonStyle">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="colorSwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>